/* 1.0 搜索框 */

.search {
  background-color: #eee;
  padding: 20rpx 16rpx;
}

.search-in {
  background-color: #fff;
  border-radius: 5rpx;
  height: 60rpx;
  /* 伸缩盒显示模式 */
  display: flex;
  /* 交叉轴对齐 */
  align-items: center;
  padding-left: 20rpx;
}

.search-text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.search-button {
  position: absolute;
  right: 16rpx;
}

/* 2.0 搜索历史 */

.search-history {
  padding: 20rpx;
}

.search-history-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}

.search-history-list {
  display: flex;
  flex-wrap: wrap;
}

.search-history-item {
  background-color: #ddd;
  padding: 10px 25rpx;
  margin: 0 20rpx 20rpx 0;
}

/* 3.0 搜索提示 */
.search-tips{
  position: absolute;
  left:0;
  right: 0;
  top:100rpx;
  bottom: 0;
  background-color: #f2f2f2;
}
.search-tips-item{
  border-bottom: 1rpx solid #ddd;
  line-height: 60rpx;
  padding: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
